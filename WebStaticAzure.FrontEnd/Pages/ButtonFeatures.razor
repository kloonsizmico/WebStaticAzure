@page "/button-features"
@using Syncfusion.Blazor.Buttons
<h2>Button</h2>
<br/>
<div id = "ControlRegion">
<div class="control-section">
    <div>
        <div class="parent">
            <div class="btn">
                <SfButton IsPrimary="true">Primary</SfButton>
            </div>
            <div class="btn">
                <SfButton>Normal</SfButton>
            </div>
            <div class="btn">
                <SfButton IsPrimary="true" CssClass="e-outline">Outline</SfButton>
            </div>
            <div class="btn">
                <SfButton CssClass="e-flat" IsPrimary="true">Flat</SfButton>
            </div>
        </div>
        <div class="parent">
            <div class="btn">
                <SfButton CssClass="e-success">Success</SfButton>
            </div>
            <div class="btn">
                <SfButton CssClass="e-warning"> Warning</SfButton>
            </div>
            <div class="btn">
                <SfButton CssClass="e-danger">Danger</SfButton>
            </div>
            <div class="btn">
                <SfButton CssClass="e-info">Info</SfButton>
            </div>
        </div>
        <div class="parent">
            <div class="btn">
                <SfButton IconCss="e-btn-sb-icons e-add-icon" CssClass="e-small e-round" IsPrimary="true"></SfButton>
            </div>
            <div class="btn">
                <SfButton CssClass="e-flat" IsToggle="true" IsPrimary="true" Content="@Content" IconCss="@IconCss" @ref="ToggleButton" @onclick="OnToggleClick"></SfButton>
            </div>
            <div class="btn">
                <SfButton IsPrimary="true" IconCss="e-btn-sb-icons e-open-icon" IconPosition=@IconPosition.Right>Open</SfButton>
            </div>
            <div class="btn">
                <SfButton CssClass="e-small">Small</SfButton>
            </div>
        </div>
    </div>
</div>
</div>
<br/>
<div>
  <h3>Selected Features:</h3>
    <ul class="ulstyle">
      <li class="list"> Default</li>
      <li class="list"> Theme - Bootstrap v5</li>
    </ul>
</div>
<br/>
<style>
   .parent {
        display: flex;
        margin: 25px;
    }
    .btn {
        width: 25%;
    }
    @@font-face {
        font-family: 'button-icons';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }
    .e-btn-sb-icons {
        font-family: 'button-icons';
        line-height: 1;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
    .e-play-icon::before {
        content: '\e701';
    }
    .e-pause-icon::before {
        content: '\e705';
    }
    .e-open-icon::before {
        content: '\e70d';
    }
    .e-add-icon::before {
        content: '\e70a';
    }
    .ulstyle {
        margin: 0px;
        padding-left: 20px;
        display: inline-block;
    }
    .list {
    float: left;
    line-height: 20px;
    margin: 10px;
    min-width: 200px;
    }
</style>
@code { SfButton ToggleButton;
    public string Content = "Play";
    public string IconCss = "e-btn-sb-icons e-play-icon";
    public void OnToggleClick(MouseEventArgs args)
    {
        if (ToggleButton.Content == "Play")
        {
            this.Content = "Pause";
            this.IconCss = "e-btn-sb-icons e-pause-icon";
        }
        else
        {
            this.Content = "Play";
            this.IconCss = "e-btn-sb-icons e-play-icon";
        }
    }
    }
